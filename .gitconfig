[user]
  name = onk
  email = takafumi.onaka@gmail.com

[color]
  ui = auto

[alias]
  st = status -sb
  br = branch
  br-a = branch -a
  ad = add
  ad-p = add -p
  ad-w = !"git diff -w --no-color | git apply --cached"
  co = checkout
  lg = log --graph --all --color --date=relative
  l  = log --pretty=format:\"%h (%an): %s\" --date=short -20
  d  = diff -b
  dc = diff --cached -b
  dw = diff --color-words --word-diff-regex='\\w+|[^[:space:]]'
  ci = commit -v
  ci-am = commit -v --amend
  f  = fetch
  m  = merge
  mo  = merge origin/master --ff
  r-c = rebase --continue
  r-i  = rebase -i

[core]
  excludesfile = ~/.gitignore
  pager = lv -c
  quotepath = false

[format]
  pretty = %h -%d %s (%cr)

[interactive]
  singlekey = true

[push]
  default = upstream

[merge]
  ff = false

