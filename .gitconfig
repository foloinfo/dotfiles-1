[user]
  name = onk
  email = takafumi.onaka@gmail.com

[color]
  ui = auto

[alias]
  st = status -sb
  br = branch
  ad = add
  co = checkout
  lg = log --graph --all --color --date=relative
  l  = log --pretty=format:\"%h (%an): %s\" --date=short -20
  dc = diff --cached
  ci = commit -v

[core]
  excludesfile = ~/.gitignore
  pager = lv -c
  quotepath = false

[format]
  pretty = %h -%d %s (%cr)

